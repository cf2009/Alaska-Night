<!--Alaska-->

<window id="2004">
	<defaultcontrol>-</defaultcontrol>
	<animation type="WindowOpen">
		<effect type="slide" start="-200,0" end="0,0" time="600" tween="cubic" easing="out" />
		<effect type="fade" start="0" end="100" time="600" />
	</animation>
	<animation type="WindowClose">
		<effect type="slide" start="0,0" end="-200,0" time="600" tween="cubic" easing="out" />
		<effect type="fade" start="100" end="0" time="600" />
	</animation>
	<controls>

		<control type="label">
			<include>WindowID</include>
			<label>VideoOverlay.xml</label>
			<visible>Skin.HasSetting(debugmode)</visible>
		</control>

		<control type="group">
			<animation effect="slide" start="0,0" end="0,30" time="200" condition="Skin.HasSetting(RSS_only_on_home) + !Window.IsActive(home) + !Window.IsVisible(2006)">Conditional</animation>
			<posx>30</posx>
			<posy>490</posy>
			<control type="image">
				<width>292</width>
				<height>166</height>
				<texture>common/black.png</texture>
				<bordertexture border="8">common/thumb_border.png</bordertexture>
				<bordersize>8</bordersize>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="videowindow" id="1">
				<description>Video Preview</description>
				<posx>8</posx>
				<posy>8</posy>
				<width>276</width>
				<height>150</height>
			</control>
			<!--control type="label">
				<visible>!Window.IsActive(2006)</visible>
				<posx>300</posx>
				<posy>10</posy>
				<width>1034</width>
				<font>Font_ListDetail</font>
				<label>[B]Now Playing[/B]</label>
				<textcolor>NowPlayingArtist</textcolor>
				<animation effect="fade" start="0" end="100" time="400" delay="400">Visible</animation>
				<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
			</control-->
			<control type="label">
				<posx>300</posx>
				<posy>140</posy>
				<width>1034</width>
				<font>Font_ListDetail</font>
				<label>[B]$INFO[VideoPlayer.Title][/B]</label>
				<textcolor>NowPlayingTrack</textcolor>
			</control> 
			<control type="label">
				<posx>300</posx>
				<posy>120</posy>
				<width>1034</width>
				<font>Font_ListDetail</font>
				<label>$INFO[VideoPlayer.TVShowTitle]</label>
				<textcolor>NowPlayingTrack</textcolor>
				<visible>VideoPlayer.Content(episodes)</visible>
			</control>
			<control type="label">
				<posx>300</posx>
				<posy>120</posy>
				<width>1034</width>
				<font>Font_ListDetail</font>
				<label>$INFO[VideoPlayer.Genre]</label>
				<textcolor>NowPlayingTrack</textcolor>
				<visible>!VideoPlayer.Content(episodes)</visible>
			</control>
		</control>

		<include>Object_DebugGrid</include>

	</controls>
</window>
