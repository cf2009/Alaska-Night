<!--Alaska-->

<includes>
	<include name="Viewtype_Poster">
		<!-- Browser -->
		<control type="wraplist" id="50">
			<posx>-188</posx>
			<posy>65</posy>
			<height>515</height>
			<width>1656</width>
			<onleft>300</onleft>
			<onright>300</onright>
			<onup>7000</onup>
			<ondown>7000</ondown>
			<viewtype label="Poster">list</viewtype>
			<orientation>horizontal</orientation>
			<scrolltime>200</scrolltime>
			<focusposition>4</focusposition>
			<scrolltime>200</scrolltime>
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_ZoomedByMenu</include>
			<visible>!Container.Content(episodes)</visible>
			<itemlayout width="168" height="245">
				<control type="image">
					<posx>1</posx>
					<posy>131</posy>
					<width>162</width>
					<height>241</height>
					<texture>postermatteNF.png</texture>
					<include>Animation_HiddenByInfo</include>
					<colordiffuse>WallIconDiffuse</colordiffuse>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>131</posy>
					<width>162</width>
					<height>241</height>
					<texture background="true" diffuse="postermatteNF.png">$INFO[ListItem.Icon]</texture>
					<fadetime>200</fadetime>
					<colordiffuse>WallIconDiffuse</colordiffuse>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_HiddenByInfo</include>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>130</posy>
					<width>164</width>
					<height>243</height>
					<texture>posterframeNF.png</texture>
					<include>Animation_HiddenByInfo</include>
					<colordiffuse>WallIconDiffuse</colordiffuse>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>373</posy>
					<width>162</width>
					<height>241</height>
					<texture background="true" flipy="true" diffuse="postermatteNF_reflect.png">$INFO[ListItem.Icon]</texture>
					<fadetime>200</fadetime>
					<colordiffuse>WallIconDiffuse</colordiffuse>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_HiddenByInfo</include>
				</control>
				<control type="image">
					<posx>2</posx>
					<posy>132</posy>
					<width>25</width>
					<height>25</height>
					<visible>!Skin.HasSetting(nomovieoverlays) + !IsEmpty(ListItem.Overlay)</visible>
					<info>ListItem.Overlay</info>
					<colordiffuse>WallIconDiffuse</colordiffuse>
					<include>Animation_HiddenByInfo</include>
				</control>
			</itemlayout>
			<focusedlayout width="328" height="515">
				<control type="image">
					<posx>2</posx>
					<posy>20</posy>
					<width>320</width>
					<height>476</height>
					<texture background="true" diffuse="postermatte.png">$INFO[ListItem.Icon]</texture>
					<fadetime>200</fadetime>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_PosterInfoSlide</include>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="160,238" start="51" end="100" time="600" tween="back" easing="out" />
					</animation>
				</control>
				<control type="image">
					<posx>-18</posx>
					<posy>0</posy>
					<width>359</width>
					<height>515</height>
					<texture>posterframeF.png</texture>
					<include>Animation_PosterInfoSlide</include>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="180,258" start="51" end="100" time="600" tween="back" easing="out" />
						<effect type="fade" start="0" end="100" time="600" />
					</animation>
				</control>
				<control type="image">
					<posx>12</posx>
					<posy>30</posy>
					<width>40</width>
					<height>40</height>
					<visible>!Skin.HasSetting(nomovieoverlays) + !IsEmpty(ListItem.Overlay)</visible>
					<info>ListItem.Overlay</info>
					<include>Animation_PosterInfoSlide</include>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="180,258" start="51" end="100" time="600" tween="back" easing="out" />
						<effect type="fade" start="0" end="100" time="600" />
					</animation>
				</control>
			</focusedlayout>
		</control>
		<!-- Browser label and flags -->
		<control type="group">
			<visible>Control.IsVisible(50)</visible>
			<posx>840</posx>
			<posy>460</posy>
			<include>Animation_SlideUpFadeOut</include>
			<include>Animation_HiddenByInfo</include>
			<include>Animation_ZoomedByMenu</include>
			<control type="label">
				<posx>5</posx>
				<posy>0</posy>
				<width>420</width>
				<height>50</height>
				<aligny>center</aligny>
				<font>Font_PosterTitle</font>
				<textcolor>PosterTitle</textcolor>
				<label>$INFO[ListItem.Label]</label>
				<visible>!Container.Content(seasons)</visible>
			</control>
			<control type="label">
				<posx>5</posx>
				<posy>0</posy>
				<width>420</width>
				<font>Font_PosterTitle</font>
				<textcolor>PosterTitle</textcolor>
				<label>$INFO[ListItem.TVShowTitle]</label>
				<visible>Container.Content(seasons)</visible>
				<animation effect="fade" start="60" end="60" time="0" condition="true">Conditional</animation>
			</control>
			<control type="label">
				<posx>5</posx>
				<posy>30</posy>
				<width>420</width>
				<font>Font_PosterTitle</font>
				<textcolor>PosterTitle</textcolor>
				<label>$INFO[ListItem.Label]</label>
				<visible>Container.Content(seasons)</visible>
			</control>
			<control type="label">
				<posx>5</posx>
				<posy>30</posy>
				<width>420</width>
				<height>50</height>
				<aligny>center</aligny>
				<font>Font_ListDetail</font>
				<textcolor>ListTrackF</textcolor>
				<label>[B]$INFO[ListItem.Genre][/B]</label>
				<visible>Container.Content(tvshows) | Container.Content(movies)</visible>
			</control>
			<control type="label">
				<posx>5</posx>
				<posy>50</posy>
				<width>420</width>
				<height>50</height>
				<aligny>center</aligny>
				<font>Font_ListDetail</font>
				<textcolor>ListTrackF</textcolor>
				<label>Episodes: [B]$INFO[ListItem.Episode][/B]</label>
				<visible>!IsEmpty(ListItem.Episode) + [Container.Content(tvshows) | Container.Content(seasons)]</visible>
			</control>
			<control type="label">
				<posx>5</posx>
				<posy>70</posy>
				<width>420</width>
				<height>50</height>
				<aligny>center</aligny>
				<font>Font_ListDetail</font>
				<textcolor>ListTrackF</textcolor>
				<label>Premiered: [B]$INFO[ListItem.Premiered][/B]</label>
				<visible>Container.Content(tvshows)</visible>
			</control>
		</control>
		<control type="group">
			<visible>Control.IsVisible(50)</visible>
			<include>Animation_ZoomedByMenu</include>
			<include>PosterMediaFlags</include>
		</control>
	</include>
	<include name="Viewtype_MusicPoster">
		<control type="wraplist" id="54">
			<viewtype label="Poster">icon</viewtype>
			<posx>-110</posx>
			<posy>200</posy>
			<width>1500</width>
			<height>300</height>
			<pagecontrol>61</pagecontrol>
			<scrolltime>200</scrolltime>
			<orientation>horizontal</orientation>
			<focusposition>3</focusposition>
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_PictureGridFloat</include>
			<include>Animation_ZoomedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<onup>7000</onup>
			<ondown>7000</ondown>
			<itemlayout width="200" height="200">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>200</width>
					<height>200</height>
					<fadetime>200</fadetime>
					<texture>$INFO[ListItem.Icon]</texture>
					<aspectratio>scale</aspectratio>
					<bordertexture border="8">common/thumb_border.png</bordertexture>
					<bordersize>8</bordersize>
					<animation effect="fade" start="30" end="30" time="0" condition="true">Conditional</animation>
					<animation effect="fade" start="100" end="30" time="200">UnFocus</animation>
				</control>
				<control type="image">
					<posx>8</posx>
					<posy>200</posy>
					<width>184</width>
					<height>184</height>
					<texture background="true" flipy="true" diffuse="postermatteNF_reflect.png">$INFO[ListItem.Icon]</texture>
					<fadetime>200</fadetime>
					<colordiffuse>89FFFFFF</colordiffuse>
					<aspectratio scalediffuse="false">stretch</aspectratio>
				</control>
			</itemlayout>
			<focusedlayout width="300" height="300">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>300</width>
					<height>300</height>
					<texture>$INFO[ListItem.Icon]</texture>
					<aspectratio>scale</aspectratio>
					<bordertexture border="8">common/thumb_border.png</bordertexture>
					<bordersize>8</bordersize>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="160,0" start="67" end="100" time="600" tween="back" easing="out" />
						<effect type="fade" start="30" end="100" time="600" />
					</animation>
				</control>
			</focusedlayout>
		</control>
		<!-- label -->
		<control type="group">
			<visible>Control.IsVisible(54)</visible>
			<posx>800</posx>
			<posy>410</posy>
			<include>Animation_SlideUpFadeOut</include>
			<include>Animation_HiddenByInfo</include>
			<include>Animation_ZoomedByMenu</include>
			<!-- Artist -->
			<control type="group">
				<visible>Container.Content(artists)</visible>
				<control type="label">
					<posx>0</posx>
					<posy>10</posy>
					<width>450</width>
					<height>25</height>
					<aligny>center</aligny>
					<font>Font_ListTitleBig</font>
					<textcolor>ListTitleF</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="textbox">
					<posx>0</posx>
					<posy>35</posy>
					<width>450</width>
					<height>100</height>
					<font>Font_ListDetail</font>
					<textcolor>ListTitleF</textcolor>
					<label fallback="31425">$INFO[ListItem.Property(description)]</label>
				</control>
			</control>
			<!-- Album -->
			<control type="group">
				<visible>Container.Content(albums)</visible>
				<control type="label">
					<posx>0</posx>
					<posy>5</posy>
					<width>450</width>
					<height>90</height>
					<aligny>center</aligny>
					<font>Font_ListTitleBigger</font>
					<textcolor>ListTitleF</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible>IsEmpty(ListItem.Album)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>15</posy>
					<width>450</width>
					<height>25</height>
					<aligny>center</aligny>
					<font>Font_ListTitleBig</font>
					<textcolor>ListTitleF</textcolor>
					<label>$INFO[ListItem.Album]</label>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>45</posy>
					<width>450</width>
					<height>17</height>
					<aligny>center</aligny>
					<font>Font_ListDetail</font>
					<textcolor>ListTitleF</textcolor>
					<label>[B]$LOCALIZE[515]:[/B] $INFO[ListItem.Genre]</label>
					<visible>!IsEmpty(ListItem.Album)</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>65</posy>
					<width>121</width>
					<height>22</height>
					<texture>$INFO[ListItem.StarRating]</texture>
					<visible>!IsEmpty(ListItem.Album)</visible>
				</control>
			</control>
			<!-- Song -->
			<control type="group">
				<visible>Container.Content(songs) |  Window.IsActive(500) | Window.IsActive(501) | [ Window.IsActive(502) + !Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]</visible>
				<control type="label">
					<posx>0</posx>
					<posy>5</posy>
					<width>450</width>
					<height>90</height>
					<aligny>center</aligny>
					<font>Font_ListTitleBigger</font>
					<textcolor>ListTitleF</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible>IsEmpty(ListItem.Title)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>15</posy>
					<width>450</width>
					<height>25</height>
					<aligny>center</aligny>
					<font>Font_ListTitleBig</font>
					<textcolor>ListTitleF</textcolor>
					<label>$INFO[ListItem.TrackNumber]. $INFO[ListItem.Title]</label>
					<visible>!IsEmpty(ListItem.Title)</visible>
					<animation effect="slide" start="0,-10" end="0,-10" time="0" condition="Window.IsActive(500) | [ Window.IsActive(502) + !Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]">Conditional</animation>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>35</posy>
					<width>450</width>
					<height>17</height>
					<aligny>center</aligny>
					<font>Font_ListDetail</font>
					<textcolor>ListTitleF</textcolor>
					<label>[B]Album:[/B] $INFO[ListItem.Album]</label>
					<visible>[Window.IsActive(500) | [ Window.IsActive(502) + !Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]] + !IsEmpty(ListItem.Title)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>45</posy>
					<width>450</width>
					<height>17</height>
					<aligny>center</aligny>
					<font>Font_ListDetail</font>
					<textcolor>ListTitleF</textcolor>
					<label>[B]Artist:[/B] $INFO[ListItem.Artist]</label>
					<visible>!IsEmpty(ListItem.Title)</visible>
					<animation effect="slide" start="0,10" end="0,10" time="0" condition="Window.IsActive(500) | [ Window.IsActive(502) + !Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]">Conditional</animation>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>65</posy>
					<width>450</width>
					<height>17</height>
					<aligny>center</aligny>
					<font>Font_ListDetail</font>
					<textcolor>ListTitleF</textcolor>
					<label>[B]Duration:[/B] $INFO[ListItem.Duration]</label>
					<visible>!IsEmpty(ListItem.Title)</visible>
					<animation effect="slide" start="0,10" end="0,10" time="0" condition="Window.IsActive(500) | [ Window.IsActive(502) + !Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]">Conditional</animation>
				</control>
			</control>
		</control>
	</include>
</includes>